<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Witaj w szybkim kursie nauki Cyrylicy"
        android:textAlignment="center"
        android:textSize="26sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:background="@color/top_bg"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/smile"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/lesson1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:text="Lekcja 1"
            android:background="@color/colorPrimary"/>

        <Button
            android:id="@+id/lesson2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_margin="15dp"
            android:text="Lekcja 2"
            android:background="@color/colorPrimary"/>
    </LinearLayout>


    <Button
        android:id="@+id/test1"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_margin="15dp"
        android:text="Sprawdzian 1"
        android:background="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/lesson3"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="Lekcja 3"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/lesson4"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="Lekcja 4"
        android:background="@color/colorPrimary"/>
    </LinearLayout>


    <Button
        android:id="@+id/test2"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_margin="15dp"
        android:text="Sprawdzian 2"
        android:background="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
    <Button
        android:id="@+id/lesson5"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="Lekcja 5"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/lesson6"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:text="Lekcja 6"
        android:background="@color/colorPrimary"/>
    </LinearLayout>



    <Button
        android:id="@+id/test3"
        android:minWidth="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_margin="15dp"
        android:text="Sprawdzian 3"
        android:background="@color/blue"/>



</LinearLayout>